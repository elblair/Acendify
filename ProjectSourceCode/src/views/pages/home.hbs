<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Acendify - Home</title>
  <style>
    body {
      margin: 0;
      font-family: 'Times New Roman', Times, serif;
      background-color: #a2e2a3; /* Light green background */
    }

    .title {
      text-align: center;
      color: #395b49; /* Dark green for text */
      font-size: 2rem;
      font-weight: bold;
      margin: 10px;
    }

    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 5px;
    }

    .card {
      background-color: #395b49; /* Dark green card background */
      border-radius: 10px;
      width: 90%;
      max-width: 600px;
      margin-bottom: 20px;
      padding: 15px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      color: white; /* Light green text */
    }

    .card h3 {
      margin-top: 0;
      color: #a2e2a3; /* Light green for headings */
    }

    .card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }
  </style>
</head>
<body>

<!-- Replace the header bar with just a title -->
<div class="title">Acendify</div>

<div class="container" id="content-container"></div>

<script>
  const contentContainer = document.getElementById('content-container');
  let loading = false;
  let offset = 0;
  const limit = 5;

  async function fetchAscents() {
    try {
      const response = await fetch(`/api/ascents?limit=${limit}&offset=${offset}`);
      if (!response.ok) throw new Error(`Error fetching ascents: ${response.statusText}`);
      const data = await response.json();
      return data;
    } catch (error) {
      console.error('Fetch error:', error.message);
      return [];
    }
  }

  function createCard(ascent, climbs, users) {
    const climb = climbs.find(c => c.climb_id === ascent.climb_id);
    const user = users.find(u => u.user_id === ascent.user_id);
    const card = document.createElement('div');
    card.className = 'card';
    card.innerHTML = `
      <h3>User: ${user ? user.username : 'Unknown'}</h3>
      <p>Climb: ${climb ? climb.name : 'Unknown'}</p>
      <p>Comment: ${ascent.comment || 'No comment'}</p>
      <p>Suggested Grade: V${ascent.suggested_grade || 'N/A'}</p>
      <p>Rating: ${ascent.rating || 'N/A'}/5</p>
    `;
    return card;
  }

  async function loadAscents() {
    if (loading) return;
    loading = true;
    const res = await fetchAscents();

    if (res[0].length === 0) {
      loading = false;
      return;
    }
    res[0].forEach(ascent => {
      const card = createCard(ascent, res[1], res[2]);
      contentContainer.appendChild(card);
    });
    offset += limit; 
    loading = false;
  }

  window.addEventListener('scroll', () => {
    if (window.innerHeight + window.scrollY >= document.body.offsetHeight - 100 && !loading) {
      loadAscents();
    }
  });
  
  loadAscents();
</script>

</body>
</html>
