                        <template data-user-template="">
                            <div class="card">
                                {{!-- Changed header to header route --}}
                                <div class="headerclimb" style="position: fixed; top: 200px;"></div> 
                                {{!-- Changed body to body route --}}
                                <div class="bodyclimb" style="position: fixed; top: 220px;"></div>
                            </div>
                        </template>
                </div>
            </div>
    </div>
    <script>
