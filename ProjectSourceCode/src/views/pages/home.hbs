                <div class="search-container">
                    <p style="position: fixed; top: 100px;">SEARCH FOR CLIMBERS:</p>
                    <input type="search" id="search" placeholder="Search for Climbers..." data-search style="position: fixed; top: 120px; left: 20px;">
                    <button type="button" onclick="performSearch()" style="position: fixed; top: 155px; left: 20px;">Search</button>
                    <ul id="searchResults"></ul>
                    <div class="user-cards" data-user-cards-container></div>
