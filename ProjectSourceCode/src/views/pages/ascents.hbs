<div class="container">
  <div class="row mb-4">
    <div class="col">
      <h2>My Ascents</h2>
      {{#if hasAscents}}
        <p class="text-muted">Total ascents logged: {{totalAscents}}</p>
      {{/if}}
    </div>
  </div>

  {{#if hasAscents}}
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>Date</th>
            <th>Climb</th>
            <th>Grade</th>
            <th>Location</th>
            <th>Rating</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each ascents}}
          <tr>
            <td>{{formatDate this.ascent_date}}</td>
            <td>{{this.climb_name}}</td>
            <td>{{this.grade}}</td>
            <td>{{this.location}}</td>
            <td>
              {{#if this.rating}}
                {{this.rating}}/5
              {{else}}
                -
              {{/if}}
            </td>
            <td>
              <a href="/edit_ascent/{{this.ascent_id}}" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i> Edit
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="card">
      <div class="card-body text-center py-5">
        <h3 class="card-title mb-3">No Ascents Yet</h3>
        <p class="card-text text-muted mb-4">
          Welcome {{username}}! You haven't logged any climbs yet. 
          Start by logging your first ascent!
        </p>
        <a href="/add_ascent" class="btn btn-lg btn-primary">
          <i class="fas fa-plus"></i> Log Your First Ascent
        </a>
      </div>
    </div>
  {{/if}}
</div>